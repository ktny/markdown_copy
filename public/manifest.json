{
  "manifest_version": 2,
  "name": "Markdown Copy",
  "description": "ページリンクや画像をMarkdown形式でコピーする拡張機能です",
  "version": "0.2",
  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "32": "icon.png"
  },
  "browser_action": {
    "default_title": "Markdown Copy",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "notifications"
  ]
}